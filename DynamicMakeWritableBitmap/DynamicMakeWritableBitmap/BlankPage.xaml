    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DynamicMakeWritableBitmap"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <Button Click="Button_Click_1" Content="Set Bitmap" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="126" Height="83"/>
        <Button Click="Button_Click_2" Content="Make" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="126" Height="83"/>
        <Image HorizontalAlignment="Left" Height="140" Margin="168,10,0,0" VerticalAlignment="Top" Width="140" 
               Source="ms-appx:///Images/Logo1.png"
               Name="image1"/>
        <Button Click="Button_Click_3"  Content="Make BMP" HorizontalAlignment="Left" Margin="10,176,0,0" VerticalAlignment="Top" Width="126" Height="83"/>

    </Grid>
</Page>
