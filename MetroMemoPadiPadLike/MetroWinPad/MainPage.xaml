    <Grid x:Name="grid" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="imageBack" Source="Images/IMG_0048.PNG" Width="1024" Height="768" >
        </Image>
        <ListView HorizontalAlignment="Left" VerticalAlignment="Top"
            Name="listView1" Margin="160,136,0,0" Background="White"
                  SelectionChanged="listView1_SelectionChanged_1"
                  Foreground="Black" Height="592" Width="288"
                  >
        </ListView>
        <TextBox 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Name="textBox1" Margin="540,125,0,0" Background="#00F0EBAF" AcceptsReturn="True" Height="580" Width="585" BorderThickness="0"
            Text="ここに文章を書きます。"
            />
        <Image Name="imageMask" HorizontalAlignment="Left" VerticalAlignment="Top"
            Source="ms-appx:///Images/bottommask.png"  Width="347" Height="176" Margin="128,607,0,0"></Image>
        <Button Click="buttonNew_Click_1" 
            x:Name="buttonNew" Content="" HorizontalAlignment="Left" Margin="1094,55,0,0" VerticalAlignment="Top" Width="44" Height="38"/>
        <Button Click="buttonPrev_Click_1" 
            x:Name="buttonPrev" Content="" HorizontalAlignment="Left" Margin="662,723,0,0" VerticalAlignment="Top" Width="44" Height="38"/>
        <Button Click="buttonNext_Click_1" 
            x:Name="buttonNext" Content="" HorizontalAlignment="Left" Margin="906,723,0,0" VerticalAlignment="Top" Width="44" Height="38"/>
        <Button 
            Click="buttonTrush_Click_1"
            x:Name="buttonTrush" Content="" HorizontalAlignment="Left" Margin="826,723,0,0" VerticalAlignment="Top" Width="44" Height="38"/>
        <Button 
            Click="buttonContract_Click_1"
            x:Name="buttonContract" Content="" HorizontalAlignment="Left" Margin="745,723,0,0" VerticalAlignment="Top" Width="44" Height="38"/>
        <local:PopupButtons x:Name="popup1" HorizontalAlignment="Left" Margin="745,649,0,0" VerticalAlignment="Top"/>
        <Grid x:Name="grid1" HorizontalAlignment="Left" Height="580" Margin="540,125,0,0" VerticalAlignment="Top" Width="585" RenderTransformOrigin="0.5,0.5" >
        	<Grid.RenderTransform>
        		<CompositeTransform/>
        	</Grid.RenderTransform>
        	<TextBox x:Name="textBoxAni" Text="TextBox" Background="#FFF0ECB2" AcceptsReturn="True" IsReadOnly="True" RenderTransformOrigin="0.5,0.5" >
        		<TextBox.RenderTransform>
        			<CompositeTransform/>
        		</TextBox.RenderTransform>
        	</TextBox>
        </Grid>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Storyboard.TargetName="imageBack">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="768"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Height" Storyboard.TargetName="imageBack">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="1024"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Source" Storyboard.TargetName="imageBack">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Images/IMG_0049.PNG"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Storyboard.TargetName="listView1">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility" Storyboard.TargetName="imageMask">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Width" Storyboard.TargetName="textBox1">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="658"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Height" Storyboard.TargetName="textBox1">
